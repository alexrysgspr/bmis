@model Bmis.Web.Controllers.Households.HouseHoldViewModel

@{
    ViewData["title"] = Model.Address;
}

<div class="row">
    <div class="col-md-2">
        <div class="box box-body pull-up bg-warning bg-deathstar-white">
            <div class="flexbox">
                <span class="fa fa-users font-size-40"></span>
                <span class="font-weight-200 font-size-26">@Model.TotalMembers</span>
            </div>
            <div class="text-right">Total Members</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box box-body pull-up bg-danger bg-deathstar-white">
            <div class="flexbox">
                <span class="fa fa-drivers-license-o font-size-40"></span>
                <span class="font-weight-200 font-size-26">@Model.TotalVoters</span>
            </div>
            <div class="text-right">Total Voters</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box box-body pull-up bg-info bg-deathstar-white">
            <div class="flexbox">
                <span class="fa fa-wheelchair font-size-40"></span>
                <span class="font-weight-200 font-size-26">@Model.TotalPwd</span>
            </div>
            <div class="text-right">PWD</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box box-body pull-up bg-info bg-deathstar-white">
            <div class="flexbox">
                <span class="fa fa-wheelchair font-size-40"></span>
                <span class="font-weight-200 font-size-26">@Model.TotalMale</span>
            </div>
            <div class="text-right">PWD</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box box-body pull-up bg-info bg-deathstar-white">
            <div class="flexbox">
                <span class="fa fa-wheelchair font-size-40"></span>
                <span class="font-weight-200 font-size-26">@Model.TotalFemale</span>
            </div>
            <div class="text-right">PWD</div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var resident in Model.Residents)
    {
        <div class="box box-body col-auto flex-shrink-1 m-5" style="width: 18rem;">
            <div class="p-2">
                <img class="rounded my-10" src="~/images/card/1.jpg" alt="">
                <h5 class="m-0"><a asp-action="Resident" asp-controller="Residents" asp-route-id="@resident.Id">
                    @resident.GetFullName()
                </a></h5>
                <div>Gender: @resident.Gender</div>
                <div>Voter Status: @resident.VoterStatus</div>
            </div>
        </div>
    }
</div>